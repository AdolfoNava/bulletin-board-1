    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade active show" id="active-tab-pane" role="tabpanel" aria-labelledby="active-tab" tabindex="0">
        <div class="row row-cols-1 row-cols-md-4 g-4">
          <% @active_posts.each do |post| %>
            <div class="col-md-12">
              <div class="card">
                <div class="card-header">
                  <h6 class="h6 my-1"><%=post.title%></h6>
                  <div>Expires on <%=post.expires_on.strftime("%b %e, %Y")%></div>
                </div>
                <div class="card-body"><%=post.body%></div>
                <div class="card-footer">Posted on <%=post.created_at.strftime("%b %e, %Y")%></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade" id="expired-tab-pane" role="tabpanel" aria-labelledby="expired-tab" tabindex="0">
        <div class="row row-cols-1 row-cols-md-4 g-4">
          <% @expired_posts.each do |post| %>
            <div class="col">
              <div class="card">
