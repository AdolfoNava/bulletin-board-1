                  <div>Expires on <%=post.expires_on.strftime("%b %e, %Y")%></div>
                </div>
                <div class="card-body"><%=post.body%></div>
                <div class="card-footer">Posted on <%=post.created_at.strftime("%b %e, %Y")%></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
